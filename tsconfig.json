{
  "include": ["src"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "moduleResolution":"NodeNext",
    "module": "NodeNext",
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src",
    "strict": false,
    "jsx": "react",
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "es2021",
    "isolatedModules": true,
    "allowSyntheticDefaultImports"  : true,
  }
}
